{
  "name": "@texttree/tn-quote",
  "author": "TextTree.org",
  "version": "0.3.0",
  "description": "Library for finding occurrences for notes and their translation",
  "keywords": [
    "rcl",
    "react",
    "occurrence",
    "translationNotes"
  ],
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "url": "https://github.com/texttree/tn-quote",
  "homepage": "https://github.com/texttree/tn-quote#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/texttree/tn-quote.git"
  },
  "bugs": {
    "url": "https://github.com/texttree/tn-quote/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix"
    ],
    "*.+(json|md)": [
      "prettier --write"
    ]
  },
  "scripts": {
    "build": "styleguidist build",
    "start": "styleguidist server",
    "lint": "eslint --fix .",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prepublishOnly": "shx rm -rf ./dist && babel ./src --out-dir ./dist -s inline --ignore ./src/**/*.jsx",
    "prettier": "prettier --write .",
    "release": "standard-version",
    "release:first": "standard-version --first-release",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch"
  },
  "oldScripts": {
    "prepublishOnly": "shx rm -rf ./dist && babel ./src --out-dir ./dist -s inline --ignore ./src/**/*.jsx && shx cp -R ./src/bible ./dist"
  },
  "peerDependencies": {
    "prop-types": "^15.x",
    "react": "^17.x || ^18.x",
    "react-dom": "^17.x || ^18.x"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.22.1",
    "@babel/eslint-parser": "^7.21.8",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/preset-env": "^7.22.4",
    "@babel/preset-react": "^7.22.3",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@material-ui/core": "^4.12.4",
    "babel-loader": "^9.1.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.8",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-styleguidist": "13.0.0",
    "shx": "^0.3.4",
    "standard-version": "^9.5.0",
    "webpack": "^5.85.1"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "js-yaml": "^4.1.0",
    "string-punctuation-tokenizer": "^2.2.0",
    "usfm-js": "^3.4.2",
    "xregexp": "^5.1.1"
  }
}
